<div class="d-flex">
  <h1 class="headline"><%= @article.title %></h1>
  <%= link_to(edit_article_path(@article)) do %>
    <i class="fa-solid fa-pen headline mx-2"></i>
  <% end %>
  <%= link_to(article_path(@article), data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this article?"}) do %>
    <i class="fa-solid fa-trash headline mx-2"></i>
  <% end %>
</div>
<p><%= @article.content %></p>
<%= render "nav_footer" %>
